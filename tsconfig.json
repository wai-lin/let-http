{
	"ts-node": {
		"swc": true,
		"esm": true,
		"require": ["tsconfig-paths/register"]
	},
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"typeRoots": ["core/types"],
		"outDir": ".build",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"src/*": ["./src/*"],
			"let-http/*": ["./core/lib/*"]
		}
	}
}
